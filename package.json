{
  "name": "react-pipeline",
  "version": "0.1.0",
  "description": "A pipeline for executing tasks described in React & JSX",
  "main": "src/index.js",
  "scripts": {
    "pretest": "npm run lint && npm run build",
    "test": "jest",
    "build": "babel -d lib/ src/",
    "prepublish": "npm run build",
    "clean": "rimraf lib",
    "lint": "eslint *.js src/*.js src/**/*.js spec/*.js spec/**/*.js"
  },
  "engines": {
    "node": ">=4"
  },
  "author": {
    "name": "Michael Diolosa",
    "email": "michael.diolosa@gmail.com",
    "url": "http://twitter.com/mbrio"
  },
  "babel": {
    "plugins": ["transform-decorators-legacy"],
    "presets": ["es2015", "react", "stage-0"]
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "rules": {
      "strict": 0
    }
  },
  "jest": {
    "scriptPreprocessor": "<rootDir>/node_modules/babel-jest",
    "testRunner": "<rootDir>/node_modules/jest-cli/src/testRunners/jasmine/jasmine2.js",
    "testFileExtensions": ["js"],
    "moduleFileExtensions": ["js", "json"],
    "testDirectoryName": "spec/unit",
    "testPathIgnorePatterns": [
      "/node_modules/"
    ],
    "setupTestFrameworkScriptFile": "<rootDir>/spec/bootstrap.js",
    "unmockedModulePathPatterns": [
      "<rootDir>/node_modules/react",
      "<rootDir>/node_modules/react-dom",
      "<rootDir>/node_modules/fbjs",
      "<rootDir>/node_modules/core-js"
    ],
    "verbose": true,
    "testPathDirs": [
     "lib",
     "spec"
   ]
  },
  "license": "BSD-3-Clause",
  "repository": {
    "type": "git",
    "url": "https://github.com/mbrio/react-pipeline"
  },
  "keywords": [
    "react",
    "automation",
    "pipeline"
  ],
  "dependencies": {
    "autobind-decorator": "^1.3.3",
    "babel-core": "^6.5.2",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-polyfill": "^6.5.0",
    "babel-preset-es2015": "^6.5.0",
    "babel-preset-react": "^6.5.0",
    "babel-preset-stage-0": "^6.5.0",
    "babel-register": "^6.5.2",
    "fbjs": "^0.7.2",
    "react": "^0.14.7",
    "react-dom": "^0.14.7"
  },
  "devDependencies": {
    "babel-eslint": "^5.0.0",
    "babel-jest": "^6.0.1",
    "eslint": "^2.2.0",
    "eslint-plugin-react": "^4.1.0",
    "jest-cli": "^0.8.2"
  }
}
